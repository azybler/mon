# EditorConfig helps developers define and maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Markdown often uses trailing spaces for hard line breaks
[*.md]
trim_trailing_whitespace = false

# Go API (tabs)
[api/**/*.go]
indent_style = tab

[api/go.mod]
indent_style = tab

[api/go.sum]
indent_style = tab

# Makefiles (tabs required)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# React app (2 spaces)
[ui/mon-app/**/*.js]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.jsx]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.ts]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.tsx]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.json]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.yml]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.yaml]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.css]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.scss]
indent_style = space
indent_size = 2

[ui/mon-app/**/*.html]
indent_style = space
indent_size = 2
